// plus petit et plus grand

function retournerLePlusPetit($ages){
    $plusPetit = $ages[0];
    foreach($ages as $age){
        if($plusPetit > $age){
            $plusPetit = $age;
        }
    }
    return $plusPetit;
}


function retournerLePlusGrand($ages){
    $plusGrand = $ages[0];
    foreach($ages as $age){
        if($plusGrand < $age){
            $plusGrand = $age;
        }
    }
    return $plusGrand;
}


