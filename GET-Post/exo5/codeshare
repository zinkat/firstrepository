// escalier 1 marche
// echo "*";
// echo "<br/>";
// // escalier 2 marches
// echo "**";
// // escalier 3 marches
// echo "<br/>";
// echo "***";

echo createEscalier($_GET["nb_marches"]);


function createEscalier($nbmarches){
    $escalier = "";

    // cette boucle cr√©e les niveaux (marches/"√©tages")
    for($i=1; $i<$nbmarches+1; $i++){
        // cette boucle g√®re la taille de la marche = ajoute une √©toile
        for($y=1; $y<$i+1; $y++){
            $escalier = $escalier . "*";
        }
        $escalier = $escalier . "<br/>";
    }

    return $escalier;
}

function envoyerEmail($destinataire, $sujet, $message){
    //Create an instance; passing `true` enables exceptions
    $mail = new PHPMailer(true);

    try {
        //Server settings
        $mail->SMTPDebug = SMTP::DEBUG_SERVER;                      //Enable verbose debug output
        $mail->isSMTP();                                            //Send using SMTP
        $mail->Host       = 'XXX';                     //Set the SMTP server to send through
        $mail->SMTPAuth   = true;                                   //Enable SMTP authentication
        $mail->Username   = 'XXX';                     //SMTP username
        $mail->Password   = 'XXXX';                               //SMTP password
        $mail->SMTPSecure = PHPMailer::ENCRYPTION_SMTPS;            //Enable implicit TLS encryption
        $mail->Port       = 465;                                    //TCP port to connect to; use 587 if you have set `SMTPSecure = PHPMailer::ENCRYPTION_STARTTLS`

        //Recipients
        $mail->setFrom('XXXX');
        $mail->addAddress($destinataire);

        //Content
        $mail->isHTML(true);                                  //Set email format to HTML
        $mail->Subject = $sujet;
        $mail->Body    = $message;

        $mail->send();
        echo 'Message has been sent';
    } catch (Exception $e) {
        echo "Message could not be sent. Mailer Error: {$mail->ErrorInfo}";
    }
}


