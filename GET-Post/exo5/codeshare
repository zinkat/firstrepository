function getModele($modele){
    if($modele == "formule 1" OR $modele == "F1"){
        $modele = "üèéÔ∏è";
    }
    return $modele;
}

function getPuissance($permis, $puissance){
    if($permis == "b" && $puissance <= 1){
        $puissance = "üêå";
    }
    else{
        $puissance = $puissance . " ch";
    }
    return $puissance;
}

function getPermisEmoji($permis){
    $emoji = null;

    switch ($permis){
        case "a":
            $emoji =  "üèçÔ∏è";
            break;
        case "b":
            $emoji =  "üöó";
            break;
        case "c":
            $emoji =  "üöö";
            break;
        case "d":
            $emoji = "üöå";
            break;
    }

    return $emoji;
}





