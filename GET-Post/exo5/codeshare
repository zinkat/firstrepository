// v√©rifier si on r√©cup√®re les bonnes variables
// echo $operation = $_GET["operation"];
// echo "<br>";echo $nombre1 = $_GET["nombre1"];
// echo "<br>";
// echo $nombre2 = $_GET["nombre2"];

// on cr√©er des variables pour faciliter la manipulation
$operation = $_GET["operation"];
$nombre1 = $_GET["nombre1"];
$nombre2 = $_GET["nombre2"];

// On s√©lection l'op√©ration
switch ($operation){
    case "addition":
        // selon le type d'op√©ration on r√©alise le calcul associ√©
        $resultat = $nombre1 + $nombre2;
        break;
    case "soustraction":
        $resultat = $nombre1 - $nombre2;
        break;
    case "multiplication":
        $resultat = $nombre1 * $nombre2;
        break;
    case "division":
        // le (int) cast = il force la conversion de la variable $nombre2 en integer
        if((int)$nombre2 != "0"){
            $resultat = $nombre1 / $nombre2;
        }
        else{
            $resultat = $nombre2 / $nombre1;
        }
        break;
}

echo "R√©sultat : ".$resultat;




<?php
ini_set('display_errors', 1);
ini_set('display_startup_errors', 1);
error_reporting(E_ALL);

// v√©rifier si on r√©cup√®re les bonnes variables
// echo $operation = $_GET["operation"];
// echo "<br>";echo $nombre1 = $_GET["nombre1"];
// echo "<br>";
// echo $nombre2 = $_GET["nombre2"];

// v√©rifier si les variables GET existent / ont des valeurs
if(isset($_GET["operation"]) && isset($_GET["nombre1"]) && isset($_GET["nombre2"])){
    // on cr√©er des variables pour faciliter la manipulation
    $operation = $_GET["operation"];
    $nombre1 = $_GET["nombre1"];
    $nombre2 = $_GET["nombre2"];
    // && = AND
    if(is_numeric($nombre1) && is_numeric($nombre1)){
        // On s√©lection l'op√©ration
        switch ($operation){
            case "addition":
                // selon le type d'op√©ration on r√©alise le calcul associ√©
                $resultat = $nombre1 + $nombre2;
                break;
            case "soustraction":
                $resultat = $nombre1 - $nombre2;
                break;
            case "multiplication":
                $resultat = $nombre1 * $nombre2;
                break;
            case "division":
                // le (int) cast = il force la conversion de la variable $nombre2 en integer
                if((int)$nombre2 != "0"){
                    $resultat = $nombre1 / $nombre2;
                }
                else{
                    $resultat = $nombre2 / $nombre1;
                }
                break;
        }
        echo "R√©sultat : ".$resultat;
    }
    else{
        echo "Merci de saisir des entiers ou d√©cimales";
    }
}
else{
    echo "Merci d'acc√©der au formulaire";
}


// 7. Cr√©er une fonction qui g√©n√®re un num√©ro de t√©l√©phone al√©atoire au format 06 12 25 35 42
echo generateFRNumber();

function generateFRNumber(){
    $number = null;

    // on g√©n√®re 0 + un nombre al√©atoire entre 1 et 9 + un espace
    $number = "0".rand(1, 9)." ";
    
    // on r√©p√®te 4 fois qui correspond √† la suite du num√©ro "12 25 35 42"
    for($i=0;$i<4;$i++){
        // on ajouter √† la variable $number pr√©c√©dente, on lui ajoute deux chiffres al√©atoires entre 0 ou 9 + un espace
        $number = $number . rand(0, 9) . rand(0, 9) . " ";
    }

    return $number;
}

